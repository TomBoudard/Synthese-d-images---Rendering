    while (sp > 0) {
        sp -= 1;

        vec4 F = vec4(1.);
        if (!transparent) {
            F = fresnel(dot(stack[sp].N, reflect(stack[sp].dir, stack[sp].N)), etaReal, etaImag);
        }

        vec4 indCol = color * F;
        // directIllumination(
