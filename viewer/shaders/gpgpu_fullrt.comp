        // );
        
        // shadow masking
        vec4 l = normalize(vec4(lightPosition, 1.) - stack[sp].hit);
        float shadowMask = (dot(l, stack[sp].N) < 0 || isIntersected(stack[sp].hit+1000*EPS*stack[sp].N, l)) ? 0. : 1.;

        vec4 dirCol = directIllumination(
            stack[sp].localColor,
